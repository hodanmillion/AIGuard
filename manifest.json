{
  "manifest_version": 3,
  "name": "PII_MVP \u2013 AI PII Guard (ChatGPT Fix)",
  "version": "1.3.1",
  "description": "Simple, friendly PII guard for AI tools. Hardened for ChatGPT's dynamic UI.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://script.google.com/*"
  ],
  "background": {
    "service_worker": "bg.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "PII_MVP \u2013 Status",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}